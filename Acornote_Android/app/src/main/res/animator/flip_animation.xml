<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">
    <objectAnimator
        android:valueFrom="0"
        android:valueTo="90"
        android:propertyName="rotationY"
        android:duration="@integer/flip_anim_duration_half" />

    <objectAnimator
        android:valueFrom="90"
        android:valueTo="270"
        android:propertyName="rotationY"
        android:startOffset="@integer/flip_anim_duration_half"
        android:duration="0" />

    <objectAnimator
        android:valueFrom="270"
        android:valueTo="360"
        android:propertyName="rotationY"
        android:startOffset="501"
        android:duration="@integer/flip_anim_duration_half" />

</set>